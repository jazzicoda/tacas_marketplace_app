<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :category_id, class:"col form-label" %>
    <%= form.select :category_id, @categories.map {|c| [c.name, c.id]}, class:"form-select" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :title, class:"col form-label" %>
    <%= form.text_field :title %>
  </div>

  <h5 class=mb-2”>Colours</h5>
  <div class="form-check">
        <%=form.collection_check_boxes :colour_ids, Colour.all, :id, :name do |b|%>
        <%=b.label%>
        <%=b.check_box%>
        <%end%>
  </div>


  <div class="form-group mb-3">
    <%= form.label :description, class:"col form-label" %>
    <%= form.text_area :description %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :price, class:"col form-label" %>
    <%= form.text_field :price, class:"col form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
